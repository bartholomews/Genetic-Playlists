# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# controllers.excluded.SpotifyController.callback

GET     /                                            controllers.HomeController.index
GET     /alltracks                                   controllers.HomeController.getSampleTracks
POST    /playlist                                    controllers.PlaylistController.generatePlaylist

GET     /auth                                        controllers.SpotifyApiController.auth
GET     /callback                                    controllers.SpotifyApiController.callback
GET     /sample/tracks/                              controllers.SpotifyApiController.sampleTracks
GET     /me/playlists                                controllers.SpotifyApiController.myPlaylists
GET     /:user_id/playlists/                         controllers.SpotifyApiController.playlists(user_id)
GET     /:user_id/playlists/:playlist_id/tracks      controllers.SpotifyApiController.songs(user_id, playlist_id)

#GET     /browse/featured-playlists      controllers.wrapper.Browse.featuredPlaylistsAction(_)
#GET     /browse/new-releases            controllers.wrapper.Browse.newReleasesActionAsync

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)