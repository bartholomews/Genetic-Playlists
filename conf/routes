# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                        controllers.HomeController.index
GET     /auth                    controllers.SpotifyController.auth
GET     /callback                controllers.SpotifyController.callback
GET     /tracks                  controllers.HomeController.getSpotifyTracks
GET     /alltracks               controllers.HomeController.getSampleTracks
POST    /playlist                controllers.PlaylistController.generatePlaylist

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
