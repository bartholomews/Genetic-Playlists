# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                        controllers.SpotifyHomeController.index
GET     /callback                controllers.AuthController.callback
GET     /tracks                  controllers.SpotifyHomeController.getTracks
GET     /alltracks               controllers.SpotifyHomeController.getAllTracks
POST    /auth                    controllers.AuthController.auth
POST    /playlist                controllers.PlaylistController.generatePlaylist

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
