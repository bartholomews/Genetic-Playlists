# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# controllers.SpotifyController.callback

GET     /                               controllers.HomeController.index
GET     /zzzzz                          controllers.SpotifyController.auth
GET     /bleah                          controllers.HomeController.getSpotifyTracks
GET     /alltracks                      controllers.HomeController.getSampleTracks
POST    /playlist                       controllers.PlaylistController.generatePlaylist

GET     /auth                           controllers.SpotifyApiController.auth
GET     /callback                       controllers.SpotifyApiController.callback
GET     /myPlaylists                    controllers.SpotifyApiController.myPlaylists
GET     /playlists:user                 controllers.SpotifyApiController.playlists(user)
GET     /playlists/tracks:href          controllers.SpotifyApiController.playlistTracks(href)
GET     /tracks/sample                  controllers.SpotifyApiController.sampleTracks

#GET     /browse/featured-playlists      controllers.wrapper.Browse.featuredPlaylistsAction(_)
#GET     /browse/new-releases            controllers.wrapper.Browse.newReleasesActionAsync

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)